    <%--開始：動態調整 Navbar 位置和寬度--%>
    <style>
        /* 側邊欄收起時，navbar會佔滿整個寬度 */
        .sidebar-wrapper.collapsed ~ #navbar {
            left: 0;
            width: 100%; /* Navbar 會佔滿整個畫面 */
        }

        /* 側邊欄展開時，navbar寬度減少 */
        .sidebar-wrapper ~ #navbar {
            left: 250px; /* 側邊欄寬度，假設是250px */
            width: calc(100% - 250px); /* 使navbar適應剩餘空間 */
        }

        /* 確保當側邊欄展開時，navbar位置和寬度正確 */
        @media (max-width: 768px) {
            /* 當視窗寬度小於768px時，navbar佔滿整個螢幕 */
            .sidebar-wrapper.collapsed ~ #navbar {
                width: 100%;
                left: 0;
            }
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // 獲取側邊欄和導航欄
            const sidebar = document.querySelector('.sidebar-wrapper');
            const navbar = document.querySelector('#navbar');

            // 切換側邊欄的狀態（展開/收起）
            const toggleSidebar = () => {
                if (sidebar.classList.contains('collapsed')) {
                    // 側邊欄收起時，navbar佔滿整個螢幕
                    navbar.style.left = '0';
                    navbar.style.width = '100%';
                } else {
                    // 側邊欄展開時，navbar推開250px
                    navbar.style.left = '250px';
                    navbar.style.width = 'calc(100% - 250px)';
                }
            };

            // 監聽點擊漢堡選單按鈕，切換側邊欄收起狀態
            const sidebarToggleButton = document.querySelector('[data-lte-toggle="sidebar"]');
            sidebarToggleButton.addEventListener('click', function () {
                sidebar.classList.toggle('collapsed');  // 切換collapsed類別
                toggleSidebar();  // 調整navbar的寬度和位置
            });

            // 頁面加載時，初始化navbar的寬度和位置
            toggleSidebar();
        });
    </script>
    <%--結束：動態調整 Navbar 位置和寬度--%>

